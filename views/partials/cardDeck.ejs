<div class="mt-2 grid lg:grid-cols-3 md:grid-cols-2 gap-10">
    <% dramaList.forEach( (drama) => { %>
        <div class="card inline-block">
            <div>
                <div>
                    <img src="images/d1.jpg" class="w-full h-32 sm:h-48 object-cover" alt="drama1_img">
                </div>                        
            </div>
            <div>
                <span class="text-base text-center font-sans block p-2 font-bold">
                    <%= drama.title %>
                </span>
            </div>
            <div class="badge">
                <span class="material-icons">
                    task_alt
                </span>
                <span><%= drama.episodes %></span>
            </div>
        </div>
    <% }) %>
</div>